rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Expenses collection - users can only access their own data via appUid
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.appUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.appUid;
    }
    
    // UserLinks collection - users can only access their own linking data
    match /userLinks/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // LinkTokens collection - for account linking process only
    match /linkTokens/{tokenId} {
      allow read: if request.auth != null;
      // Write operations handled by Cloud Functions only
    }
  }
}